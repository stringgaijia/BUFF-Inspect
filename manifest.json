{
	"name": "BUFF Inspect",
	"description": "This extension allows you to generate inspection commands for server such as Broskin directly on BUFF",
	"version": "1.0.1",
	"manifest_version": 2,
	"background": {
	    "scripts":["background.js"]
	},
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
        "128": "img/icon128.png" 
    },
	"browser_action": {
        "default_icon": "img/icon128.png",
        "default_popup": "popup/popup.html"
    },
	"content_scripts": [
		{
			"matches": ["https://buff.163.com/goods/*"],
			"css": ["style.css"],
			"js": ["buff_broskin.js"]
		}
	],
	"permissions": [
	    "tabs",
	    "storage"
	]
}
